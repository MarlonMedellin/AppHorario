---
const menuItems = [
  { label: "Horario Personal", href: "/horario-personal", icon: "calendar" },
  { label: "Personalizados", href: "/personalizados", icon: "search" },
];
---

<aside
  class="hidden md:flex fixed left-0 top-0 h-full w-20 flex-col items-center py-6 bg-[var(--color-brand)] text-white shadow-xl z-50"
>
  <!-- Logo (Link to Home) -->
  <a
    href="/"
    class="mb-8 p-2 rounded-xl bg-white/10 hover:bg-white/20 transition cursor-pointer"
    title="Ir al Inicio"
  >
    <svg
      class="w-8 h-8 text-[var(--color-brand-accent)]"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
      ></path>
    </svg>
  </a>

  <!-- Nav Items -->
  <nav class="flex flex-col gap-6 w-full px-2">
    {
      menuItems.map((item) => (
        <a
          href={item.href}
          class="group relative flex items-center justify-center p-3 rounded-xl hover:bg-white/10 transition-all text-white/70 hover:text-white"
          title={item.label}
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            {item.icon === "calendar" && (
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              />
            )}
            {item.icon === "search" && (
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
              />
            )}
          </svg>

          {/* Tooltip */}
          <span class="absolute left-14 bg-gray-900 text-white text-xs px-2 py-1 rounded opacity-0 group-hover:opacity-100 transition whitespace-nowrap pointer-events-none">
            {item.label}
          </span>
        </a>
      ))
    }
  </nav>

  <!-- Bottom Actions -->
  <div class="mt-auto flex flex-col gap-4">
    <button
      class="p-3 rounded-xl hover:bg-white/10 transition text-white/70 hover:text-white"
      title="Anuncios"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
        ><path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"
        ></path></svg
      >
    </button>
  </div>
</aside>
