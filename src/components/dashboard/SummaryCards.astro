---
const stats = [
    {
        title: "Promedio General",
        value: "4.5",
        change: "+0.2",
        icon: "trending-up",
        color: "text-emerald-500",
        bg: "bg-emerald-50 dark:bg-emerald-900/20",
    },
    {
        title: "Créditos Aprobados",
        value: "85",
        subtitle: "/ 120",
        icon: "check-circle",
        color: "text-blue-500",
        bg: "bg-blue-50 dark:bg-blue-900/20",
    },
    {
        title: "Próxima Clase",
        value: "Física II",
        subtitle: "10:00 AM - Aula 302",
        icon: "clock",
        color: "text-purple-500",
        bg: "bg-purple-50 dark:bg-purple-900/20",
    },
    {
        title: "Tareas Pendientes",
        value: "3",
        change: "Para mañana",
        icon: "bell",
        color: "text-orange-500",
        bg: "bg-orange-50 dark:bg-orange-900/20",
    },
];
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    {
        stats.map((stat) => (
            <div class="bg-[var(--color-bg-card)] p-6 rounded-2xl shadow-sm hover:shadow-md transition border border-[var(--color-border)] flex items-start justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">
                        {stat.title}
                    </p>
                    <h3 class="text-2xl font-bold text-[var(--color-text-main)] flex items-end gap-2">
                        {stat.value}
                        {stat.subtitle && (
                            <span class="text-sm text-gray-400 font-normal mb-1">
                                {stat.subtitle}
                            </span>
                        )}
                    </h3>
                    {stat.change && (
                        <p class="text-xs font-semibold mt-2 text-emerald-600">
                            {stat.change}
                        </p>
                    )}
                </div>
                <div class={`p-3 rounded-xl ${stat.bg} ${stat.color}`}>
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        {stat.icon === "trending-up" && (
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
                            />
                        )}
                        {stat.icon === "check-circle" && (
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                            />
                        )}
                        {stat.icon === "clock" && (
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                            />
                        )}
                        {stat.icon === "bell" && (
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
                            />
                        )}
                    </svg>
                </div>
            </div>
        ))
    }
</div>
