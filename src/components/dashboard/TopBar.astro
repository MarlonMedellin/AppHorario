---

<header
    class="w-full h-20 flex items-center justify-between px-8 bg-transparent z-40"
>
    <!-- Spacer to push content to right -->
    <div class="flex-1"></div>

    <!-- Right Actions -->
    <div class="flex items-center gap-4 ml-6">
        <!-- Theme Toggle -->
        <button
            id="theme-toggle"
            class="p-2 text-gray-400 hover:text-[var(--color-brand)] transition rounded-full hover:bg-black/5 dark:hover:bg-white/5"
            aria-label="Toggle theme"
        >
            <svg
                id="theme-icon-light"
                class="w-6 h-6 hidden dark:block"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
                ></path>
            </svg>
            <svg
                id="theme-icon-dark"
                class="w-6 h-6 block dark:hidden"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
                ></path>
            </svg>
        </button>
        <!-- Login Button (Visible when logged out) -->
        <button
            id="login-btn"
            class="hidden px-4 py-2 bg-[var(--color-brand)] text-white rounded-lg hover:opacity-90 transition font-medium text-sm shadow-md shadow-blue-500/20"
        >
            Iniciar Sesión
        </button>

        <!-- User Menu (Visible when logged in) -->
        <div class="relative group">
            <button
                id="user-menu-btn"
                class="flex items-center gap-3 cursor-pointer hover:bg-black/5 dark:hover:bg-white/5 p-2 rounded-full transition"
            >
                <div class="hidden md:block text-right">
                    <p class="text-sm font-bold text-[var(--color-text-main)]">
                        Profesional
                    </p>
                    <p class="text-xs text-gray-500">Permanencia</p>
                </div>
                <div
                    class="w-10 h-10 rounded-full bg-gradient-to-br from-[var(--color-brand)] to-[var(--color-brand-accent)] flex items-center justify-center text-white font-bold shadow-md ring-2 ring-white dark:ring-gray-800"
                >
                    U
                </div>
            </button>

            <!-- Dropdown -->
            <div
                class="absolute right-0 mt-2 w-48 bg-[var(--color-bg-card)] rounded-xl shadow-lg border border-[var(--color-border)] opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform origin-top-right z-50"
            >
                <div class="p-4 border-b border-[var(--color-border)]">
                    <p class="text-sm font-bold text-[var(--color-text-main)]">
                        Mi Cuenta
                    </p>
                </div>
                <div class="p-2">
                    <button
                        id="logout-btn"
                        class="w-full text-left px-4 py-2 text-sm text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition"
                    >
                        Cerrar Sesión
                    </button>
                </div>
            </div>
        </div>
    </div>
</header>
