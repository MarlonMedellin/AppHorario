---
const announcements = [
    {
        title: "Inicio de asesorías",
        date: "Martes 10 de Febrero",
        type: "info",
    },
    {
        title: "Horario de Atención",
        date: "L-V: 7am-8pm | Sáb: 7am-4pm",
        type: "warning",
    },
];
---

<div class="w-full mb-8">
    <div
        class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 border border-blue-100 dark:border-blue-800 rounded-2xl p-4 flex flex-col md:flex-row items-center justify-between gap-4"
    >
        <div class="flex items-center gap-4">
            <div>
                <h4 class="font-bold text-gray-800 dark:text-gray-100">
                    Anuncios Importantes
                </h4>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                    Mantente al día con la programación de asesorías.
                </p>
            </div>
        </div>

        <div
            class="flex flex-1 gap-3 overflow-x-auto pb-2 md:pb-0 w-full md:w-auto"
        >
            {
                announcements.map((item) => (
                    <div class="flex-shrink-0 flex items-center gap-3 bg-white dark:bg-gray-800 px-4 py-2 rounded-xl border border-gray-100 dark:border-gray-700 shadow-sm">
                        <div
                            class={`w-2 h-2 rounded-full ${item.type === "warning" ? "bg-orange-400" : "bg-blue-400"}`}
                        />
                        <div class="flex flex-col">
                            <span class="text-sm font-semibold text-gray-700 dark:text-gray-200">
                                {item.title}
                            </span>
                            <span class="text-xs text-gray-400">
                                {item.date}
                            </span>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</div>
